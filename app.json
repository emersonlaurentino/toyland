{
  "expo": {
    "name": "toyland",
    "slug": "toyland",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "toyland",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.toylandapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.toylandapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Permitir que Toyland acesse suas fotos para adicionar foto de perfil, grupos ou produtos.",
          "cameraPermission": "Permitir que Toyland acesse sua câmera para ser possível que você registre fotos dos seus produtos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
